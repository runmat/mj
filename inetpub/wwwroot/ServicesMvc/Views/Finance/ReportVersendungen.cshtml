@using CkgDomainLogic.Finance.ViewModels
@model FinanceVersendungenViewModel

<h3 class="page-title" id="headerTitle">@(Model.Suchparameter.IsSummaryReport ? Localize.Finance_ReportVersendungenSumme : Localize.Finance_ReportVersendungen) <small></small></h3>

@section LayoutScript { _controlGroupValidationType = "individual"; }

@Html.Partial("Versendungen/Suche", Model.Suchparameter)

<div id="divGrid"></div>

<script type="text/javascript">

    function FormPreparePrivate() {
    }

    function FormPreparePrivateAjax() {
        FormPrepareAjax();
    }

    function GetGrid() {
        return $("#GridVersendungen").data("tGrid");
    }

    function GridLoadingHide() {
        // needed for chrome browser: Explicitely hide grids loading icon on multiple subsequent grid ajax requests (because of filter control initializing)
        setTimeout('$("#GridVersendungenItems .t-grid-pager .t-status .t-icon").removeClass("t-loading")', 500);
    }

    function GridRefresh() {
        GetGrid().ajaxRequest();
    }

    function OnDataBound_GridVersendungen() {
        FilteredData_Grid_OnDataBound($(this));
        $('.tooltips').tooltip();
    }

    function OnColumnShowHide_GridVersendungen() {
        FilteredData_Grid_OnColumnShowHide($(this));
    }

    function OnColumnReorder_GridVersendungen() {
        FilteredData_Grid_OnColumnReorder($(this));
    }

    function ShowVersendungenSearchResult(result) {
        $("#btnBackToSearch").show();
        $("#divSuche").slideUp();
        $("#divGrid").slideDown();
        $("#divGrid").html(result);
        GridAllColumnFilterApplyToGrid("GridVersendungen");
        $(".dataTables_filter").hide();
    }

    function CloseVersendungenSearchResult() {
        $("#btnBackToSearch").hide();
        $("#divGrid").slideUp(function () { $("#divSuche").delay(200).slideDown(); window.scrollTo(0, 0); });
        FormPreparePrivateAjax();
    }

    function TryGridRefresh() {
        // Refresh grid only
        if (typeof (GetGrid()) !== "undefined") {
            GetGrid().ajaxRequest();
        }
    }

</script>
