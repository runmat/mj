@model CkgDomainLogic.Equi.ViewModels.EinAusgaengeViewModel

@using CkgDomainLogic.Equi.Models
@{
    var gridName = "GridEinAusgaenge";
    var isInput = (Model.EinAusgangSelektor.FilterEinAusgangsTyp == "Inputs");
}

@(Html.XTelerik()
    .XGrid<Fahrzeugbrief>()
    .Name(gridName)

    .XAjaxDataBinding("EinAusgaengeAjaxBinding", "Equip")
    .Columns(columns =>
        {
            columns.XBound(c => c.FahrzeugHersteller);
            columns.XBound(c => c.FahrzeugTyp);
            columns.XBound(c => c.Vertragsnummer);
            columns.XBound(c => c.Fahrgestellnummer);
            columns.XBound(c => c.TechnIdentnummer);
            columns.XBound(c => c.Kennzeichen);
            columns.XBound(c => c.Eingangsdatum).Visible(isInput);
            columns.XBound(c => c.Versanddatum).Visible(!isInput);
            columns.XBound(c => c.VersendetVon).Visible(!isInput);
            columns.XBound(c => c.Versandgrund).Visible(!isInput);
            columns.XBound(c => c.Name1).Visible(!isInput);
            columns.XBound(c => c.Name2).Visible(!isInput);
            columns.XBound(c => c.StrasseHausNr).Visible(!isInput);
            columns.XBound(c => c.PLZ).Visible(!isInput);
            columns.XBound(c => c.Ort).Visible(!isInput);
        })
    .XAutoColumnConfiguration()
    .ClientEvents(events => events.XAutoClientEvents(gridName))
    .XPageSize(10)
    .XSort(sortOrder => sortOrder.Add(c => c.Equipmentnummer).Descending())
    .XToolBar("Equip")
)

