    function InitEvbVersInfo(evbFieldId, infoDivId) {
        // Validierungen
        var missingFields = false;
        if ($('#' + evbFieldId).length == 0 || $('#' + infoDivId).length == 0)
            return; // Nicht initiieren, falls eines der Felder fehlt. Erforderlich wg. Nutzung von Partials und ggf. zentralem InitEvbVersInfo-Aufruf in index-Datei

        if(!$('#' + infoDivId).hasClass('evb-vers-info'))
            $('#' + infoDivId).addClass('evb-vers-info');

        // Sofortige Anzeige der Versicherungsdaten
        ShowEvbVersInfo(evbFieldId, infoDivId);

        // Anzeige der Versicherungsdaten nach Änderung des Evb-Feldes
        $('body').off('change', '#' + evbFieldId);
        $('body').on('change', '#' + evbFieldId, function() {
            ShowEvbVersInfo(evbFieldId, infoDivId);
        });
    }
    function ShowEvbVersInfo(evbFieldId, infoDivId) {
        var evb = $('#' + evbFieldId).val();
        $.ajax({
            type: "POST",
            url: "/ServicesMvc/DomainCommon/GetEvbVersInfo",
            data: { evb: evb },
            success: function (result) {
                if (result.isValid == undefined) {
                    $('#' + infoDivId).hide();
                    return;
                }
                $('#' + infoDivId).show();
                $('#' + infoDivId).html("<span>" + result.message + "</span>");
                if (result.isValid) {
                    $('#' + infoDivId).removeClass("alert-warning");
                    $('#' + infoDivId).addClass("alert-success");
                } else {
                    $('#' + infoDivId).removeClass("alert-success");
                    $('#' + infoDivId).addClass("alert alert-warning");
                }
            }
        });
    }

    function FromJavascriptString(s) {

        var array = [];

        array.push( { code:'e4', value: 'ä' } );
        array.push( { code:'f6', value: 'ö' } );
        array.push( { code:'fc', value: 'ü' } );
        array.push( { code:'c4', value: 'Ä' } );
        array.push( { code:'d6', value: 'Ö' } );
        array.push( { code:'dc', value: 'Ü' } );
        array.push( { code:'df', value: 'ß' } );

        $.each(array, function(i, elem) {
            s = s.replace('\\u00' + elem.code, elem.value);
        });

        return s;
    }

