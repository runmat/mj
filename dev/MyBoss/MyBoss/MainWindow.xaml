<Window x:Class="MyBoss.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False"  
        Loaded="Window_Loaded" Closing="Window_Closing" 
        Topmost="True"
        mc:Ignorable="d"
        Title="My Boss" Width="400" Height="65">
    <Grid Margin="5">

        <TextBlock Foreground="Blue" HorizontalAlignment="Center">
            Window will close again in a few seconds ...
            <Button Style="{StaticResource HyperLinkSmall}" Margin="10,0,0,0" Click="RehookKeyboard" >Hook</Button>
            <Button Style="{StaticResource HyperLinkSmall}" Margin="10,0,0,0" Click="Quit" >Quit</Button>
        </TextBlock>
        
    </Grid>
</Window>
